{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "src/generated",
        "src/**/*.test.ts"
    ],
    "verbose": true,
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
        "src"
    ],
    "ext": "ts,gql",
    "exec": "ts-node -r dotenv-safe/config src/index.ts"
}
