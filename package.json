{
  "name": "librero",
  "version": "0.0.0",
  "description": "OpenSource site to freely share books.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint 'src/**/*.{js,ts}' --quiet --fix",
    "build": "tsc",
    "start": "nodemon | pino-pretty -t",
    "start:prod": "node dist/index.js",
    "codegen:graphql": "graphql-codegen --config graphql-codegen.yml",
    "codegen:prisma": "prisma generate",
    "codegen": "npm run codegen:graphql && npm run codegen:prisma",
    "db:preview": "prisma db push --preview-feature",
    "prestart": "npm run codegen",
    "prebuild": "npm run codegen"
  },
  "author": "NemeSnz",
  "license": "ISC",
  "prisma": {
    "schema": "src/frameworks-drivers/prisma/schema.prisma"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.0",
    "@graphql-codegen/schema-ast": "^1.17.8",
    "@graphql-codegen/typescript": "1.17.11",
    "@graphql-codegen/typescript-resolvers": "1.17.10",
    "@prisma/cli": "^2.12.1",
    "@tsconfig/node12": "^1.0.7",
    "@types/faker": "^5.1.4",
    "@types/node": "^14.14.7",
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "install": "^0.13.0",
    "jest": "^26.6.1",
    "nodemon": "2.0.6",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.2.4",
    "@graphql-tools/merge": "^6.2.5",
    "@prisma/client": "^2.12.1",
    "@types/pino": "^6.3.3",
    "apollo-server": "^2.19.0",
    "aws-sdk": "^2.799.0",
    "dotenv-safe": "^8.2.0",
    "faker": "^5.1.0",
    "graphql": "^15.4.0",
    "nodemailer": "^6.4.16",
    "pino": "^6.7.0"
  }
}
