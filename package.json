{
  "name": "librero",
  "version": "0.0.0",
  "description": "OpenSource site to freely share books.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "build": "tsc",
    "start": "nodemon",
    "start:prod": "node dist/index.js",
    "codegen:prisma": "prisma generate --schema src/frameworks-drivers/prisma/schema.prisma",
    "codegen:graphql": "graphql-codegen --config graphql-codegen.yml",
    "prestart": "npm run codegen:prisma && npm run codegen:graphql"
  },
  "author": "NemeSnz",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.0",
    "@graphql-codegen/schema-ast": "^1.17.8",
    "@graphql-codegen/typescript": "1.17.11",
    "@graphql-codegen/typescript-resolvers": "1.17.10",
    "@graphql-tools/load-files": "^6.2.4",
    "@prisma/cli": "^2.10.1",
    "@tsconfig/node12": "^1.0.7",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@prisma/client": "^2.10.1",
    "apollo-server": "^2.19.0",
    "graphql": "^15.4.0"
  }
}
